<!DOCTYPE html>
<html>
  <head>
	<title><%= @title %></title>
		<%= csrf_meta_tag %>
		<%= render 'layouts/stylesheets' %>
  </head>
  <body>
    <div class="container">
      <header>
        <%= image_tag("logo.png", :alt => "Sample App", :class => "round") %>
        <nav class="round">
          <ul>
            <li><%= link_to "Home", '/' %></li>
            <li><%= link_to "Help",  '/help' %></li>
            <% if signed_in? %>
               <li><%= link_to "Profile", current_user %></li>
               <li>Not <%= current_user.name%>? <%= link_to "Sign out", signout_path, :method => :delete %></li>
            <% else %>
              <li>New user? <%= link_to "Sign up now!", signup_path %></li>
              <li><%= link_to "Sign in", signin_path %></li>
            <% end %>
			<li><%= link_to "New show", newshow_path%></li>
          </ul>
        </nav>
      </header>
      <section class="round">
        <%= yield %>
      </section>
    </div>
  </body>
</html>
