<!DOCTYPE html>
<html>
  <head>
	<title>Welcome to ToobSteak!</title>
		<%= csrf_meta_tag %>
		<%= render 'layouts/stylesheets' %>
  </head>
  <body>
    <div class="container">
      <%=render 'layouts/header' %>
	  <%=render 'layouts/navigation' %>
      <section class="round">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </section>
	  <!--<%= debug(params) if Rails.env.development? %>-->
    </div>
  </body>
</html>
